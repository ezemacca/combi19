<%if usuario_signed_in? && current_usuario.role == "admin" %>
<p id="notice"><%= notice %></p>

<h1 align="center">Productos</h1><%= link_to 'Agregar Producto', new_producto_path %>
<Br>
<Br>
    <table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Precio</th>
        <th scope="col">Stock</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>

  <tbody>
    <% @productos.each do |producto| %>
      <% if !(producto.eliminado)%>
          <tr>
            <td><%= producto.nombre %></td>
            <td><%= producto.descripcion %></td>
            <td>$<%= producto.precio %> </td>
           <td><%= producto.stock %></td>
            <td><%= link_to 'Ver', producto, class: "btn btn-success btn-sm"  %>
            <%= link_to 'Editar', edit_producto_path(producto), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Eliminar', producto, method: :delete, class: 'btn btn-danger btn-sm'%></td>
          </tr>
        <%end%>
    <% end %>
  </tbody>
</table>

<br>


<%end%>