<%if usuario_signed_in? && current_usuario.role == "admin" %>

	<h1 align="center">Lista de Lugares</h1><%= link_to "Agregar Lugares", new_lugar_path %>
	<Br>
	<Br>

	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">Provincia</th>
	      <th scope="col">Ciudad</th>
	      <th scope="col">Acciones</th>
	    </tr>
	  </thead>

	  <tbody>

	  	<% @lugar.each do |l| %>	
	  		<tr>	
				<td><%= l.provincia.titleize%></td>
				<td><%= l.ciudad.titleize%></td>
	      	<td>
				<%=link_to "Ver", lugar_path(l) , class: "btn btn-success btn-sm" %>
				<%=link_to "Editar", edit_lugar_path(l), class: 'btn btn-info btn-sm'%>
				<%=link_to "eliminar", l,method: :delete, class: 'btn btn-danger btn-sm'%>
			</td>
	    </tr>
	    <% end %>
	 	</tbody>
	</table>		

<%else%> 
	<h1 align="center">ACCESO DENEGADO</h1>
<% end %>

