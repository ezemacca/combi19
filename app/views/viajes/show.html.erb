<%if usuario_signed_in? && current_usuario.role == "admin" %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Fecha:</strong>
  <%= @viaje.fecha %>
</p>

<p>
  <strong>Origen:</strong>
  <%= @lugar.find(@ruta.find(@viaje.ruta).origen).mostrar_atributos %>
</p>

<p>
  <strong>Destino:</strong>
  <%= @lugar.find(@ruta.find(@viaje.ruta).destino).mostrar_atributos %>
</p>

<p>
  <strong>Ruta:</strong>
  <%= @ruta.find(@viaje.ruta).mostrar_nombre %>
</p>

<p>
  <strong>Combi:</strong>
  <%= @combi.find(@viaje.combi).mostrar_atributos %>
</p>

<p>
  <strong>Chofer:</strong>
  <%= @usuario.find(@viaje.chofer).mostrar_atributos %>
</p>

<%= link_to 'Editar', edit_viaje_path(@viaje) %> |
<%= link_to 'Volver', viajes_path %>
<%end%>