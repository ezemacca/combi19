<h1> Editar una combi </h1>

   <%= form_for :combi, url: combi_path, method: :patch do |c| %>

  <div class="field">
    <%= c.label :clasificacion %><br />
     <%= c.select :clasificacion, ['Comoda','Super Comoda']%>
  </div>

  <div class="field">
    <%= c.label :plazas_totales %><br />
    <%= c.number_field :plazas_totales, in: 1..100 , step: 1, required: true, placeholder: "Plazas " %>
  </div>
  <div class="field">
    <%= c.label :modelo %><br />
    <%= c.text_field :modelo, required: true, placeholder: "Modelo de la combi:" %>
  </div>
  <div class="field">
    <%= c.label :patente %><br />
    <%= c.text_field :patente, required: true, placeholder: "Patente" %>
  </div>

  <div class="actions">

    <%= c.submit "guardar cambios" %>
  
  </div>
<% end %>
<div> <%= link_to "Volver a lista de combis", combis_path %> </div>

