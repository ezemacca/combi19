<%if usuario_signed_in? && current_usuario.role == "admin" %>


	<h1>Lista de Combis</h1>

		
				<div>
				<table>
					<tr>
						<th>Patente</th>
						<th>Clasificacion</th>
						<th>Plazas Totales</th>
						<th>Modelo</th>
						<th>Acciones</th>
						<th colspan="3"></th>					
					</tr>
					<% @combi.each do |c| %>
					<tr>
						<td><%=c.patente.upcase%></td>
						<td><%=c.clasificacion%></td>
						<td><%=c.plazas_totales%></td> 
						<td><%=c.modelo%></td>
						<td>
							<%=link_to "Ver", combi_path(c) %>
							<%=link_to "Editar", edit_combi_path(c)%>
							<%=link_to "eliminar", c,method: :delete%>
						</td>

					
					</tr>
					<%end%>
				</table>
			
				</div>
		
<% end %>

<br>
<div><%= link_to "Agregar Combi", new_combi_path %></div>