<h1>Objetos perdidos</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Objeto</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Viaje</th>
      <th scope="col">Accion</th>
    </tr>
  </thead>

  <tbody>
	<% @objetoperdidos.each do |o| %>
		<tr>
		    <td><%= o.nombre.titleize %></td>
		    <td><%= o.descripcion.capitalize %></td>
		    <td>
				<%= link_to "Ver viaje", objetoperdido_path(o.viaje_id), class: "btn btn-info btn-sm" %>
		    </td>
		    <td>
		    	<%= link_to "Eliminar", objetoperdido_path(o), method: :delete, class: "btn btn-danger btn-sm" %>
		    </td>
		</tr>
	<%end%>
  </tbody>
</table>