    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.label "Contrase単a" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: "Contrase単a" %>
  </div>

  <div class="field">
