<p id="notice"><%= notice %></p>

<h1>Calificaciones</h1>
    <h3>Hola</h3>
    <h3>Estas son las calificaciones del viaje <%= @origen.mostrar_atributos %> - <%=@destino.mostrar_atributos%></h3>

<table class="table">
    <thead>
      <tr>
        <th scope="col">Usuario</th>
        <th scope="col">Puntaje</th>
        <th scope="col">Comentario</th>
      </tr>
    </thead>

  <tbody>
    <% @calificacion.each do |c| %>
    
      <tr>

        <td><%= Usuario.find(c.usuario_id) %></td> <!--estas chanchadas son xq no me dejan usar el through-->
        <td><%= c.puntaje %></td>
        <td><%= c.comentario %></td>
        <td><%= link_to 'Ver', c , class: "btn btn-success btn-sm"  %>
        <%= link_to 'Editar', edit_calificacion_path(c), class: 'btn btn-info btn-sm' %>
        <%= link_to 'Eliminar', c, method: :delete, class: 'btn btn-danger btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
